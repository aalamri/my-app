{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "articles"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "published_at": {
      "type": "date",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "meta": {
      "type": "json"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "English",
        "Arabic"
      ],
      "required": false,
      "default": "English"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending",
        "Rejected",
        "Approved"
      ],
      "default": "Pending",
      "required": true
    },
    "article_url_in_other_language": {
      "type": "string"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    },
    "last_update": {
      "type": "datetime"
    },
    "comment": {
      "type": "text"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "is_pinned": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "string"
    },
    "multi_lang_id": {
      "type": "string",
      "default": "null"
    }
  }
}
