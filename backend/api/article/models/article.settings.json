{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "published_at": {
      "type": "date",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "meta": {
      "type": "json"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "English",
        "Arabic"
      ],
      "required": false,
      "default": "English"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "tag": {
      "model": "tag",
      "via": "articles"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Rejected",
        "Approved"
      ],
      "default": "Pending",
      "required": true
    }
  }
}
