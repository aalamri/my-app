{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "cards",
  "info": {
    "name": "Cards"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "published_at": {
      "type": "date"
    },
    "is_pinned": {
      "type": "boolean",
      "default": false
    },
    "meta": {
      "type": "json"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "English",
        "Arabic"
      ],
      "default": "English",
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "card"
    },
    "author": {
      "columnName": "email",
      "plugin": "users-permissions",
      "model": "user",
      "via": "cards"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Rejected",
        "Approved"
      ],
      "default": "Pending",
      "required": true
    },
    "card_url_in_other_language": {
      "type": "string"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    },
    "comment": {
      "type": "text"
    }
  }
}
