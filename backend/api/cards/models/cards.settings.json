{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "cards",
  "info": {
    "name": "Cards"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "is_approved": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "published_at": {
      "type": "date"
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "meta": {
      "type": "json"
    },
    "Language": {
      "type": "enumeration",
      "enum": [
        "English",
        "Arabic"
      ],
      "default": "English",
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "card"
    }
  }
}
