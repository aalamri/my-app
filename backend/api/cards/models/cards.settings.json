{
  "connection": "default",
  "collectionName": "cards",
  "info": {
    "name": "Cards"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "Tags": {
      "type": "string"
    },
    "is_approved": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "published_at": {
      "type": "date"
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "stats": {
      "type": "json"
    }
  }
}
