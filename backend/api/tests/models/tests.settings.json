{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "tests",
  "info": {
    "name": "tests"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "questions": {
      "type": "dynamiczone",
      "components": [
        "questions.question",
        "questions.question-single-answer"
      ]
    },
    "category": {
      "model": "category",
      "via": "test"
    },
    "meta": {
      "type": "json"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "Arabic",
        "English"
      ]
    },
    "is_archived": {
      "type": "boolean"
    },
    "is_deleted": {
      "type": "boolean"
    },
    "test_url_in_other_language": {
      "type": "string"
    },
    "is_pinned": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Rejected",
        "Approved"
      ],
      "default": "Pending"
    },
    "comment": {
      "type": "text"
    }
  }
}
