{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "tags",
  "info": {
    "name": "Tag"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Subject": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "richtext",
      "required": false
    },
    "card": {
      "via": "tags",
      "model": "cards"
    },
    "articles": {
      "via": "tag",
      "collection": "article"
    }
  }
}
